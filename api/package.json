{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Rafael Rufino",
    "email": "rafaelrufino.52@gmail.com"
  },
  "scripts": {
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.{js|ts|md|json}'",
    "lint": "yarn fix:lint 'src/**/*.{js|ts|md|json}'",
    "prepare": "husky install",
    "prebuild": "rm -Rf ./dist",
    "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js",
    "build": "babel src --extensions \".js\" --ignore \"*.spec.js,*.test.js\" '.js,.ts' --copy-files --out-dir dist",
    "test": "jest --passWithNoTests --detectOpenHandles --forceExit --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,json,md}": [
      "yarn fix"
    ]
  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/node": "^7.27.1",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.27.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0"
  },
  "dependencies": {
    "@koa/router": "^13.1.0",
    "@prisma/client": "^6.7.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "dotenv-safe": "^9.1.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1"
  }
}
