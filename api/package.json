{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Rafael Rufino",
    "email": "rafaelrufino.52@gmail.com"
  },
  "scripts": {
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(js|ts|md|json)'",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --preview-feature",
    "db:studio": "prisma studio",
    "prepare": "husky",
    "prebuild": "rm -Rf ./dist",
    "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js",
    "build": "babel src --extensions \".js\" --ignore \"*.spec.js,*.test.js\" '.js,.ts' --copy-files --out-dir dist",
    "test": "jest --passWithNoTests --detectOpenHandles --forceExit --coverage",
    "docker": "docker-compose up -d"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./src/**/*.{js,md,json}": [
      "yarn fix"
    ]
  },

  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/node": "^7.27.1",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.27.2",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^6.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "supertest": "^7.1.1"
  },
  "dependencies": {
    "@koa/router": "^13.1.0",
    "@prisma/client": "^6.7.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "dotenv-safe": "^9.1.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1"
  }
}
